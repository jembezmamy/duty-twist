{{#data-table class="even-width schedule-table" as |table|}}
  <tr>
    <th>
      {{data-table/navigation on=table}}
    </th>
    {{#each people as |person|}}
      <th>
        {{#link-to "schedules.show.person" person.schedule person class="subtle-link"}}
          {{person.name}}
        {{/link-to}}
      </th>
    {{/each}}
  </tr>
  {{#each rounds as |round|}}
    {{schedule-table/round model=round currentRoundNumber=currentRoundNumber}}
  {{/each}}
{{/data-table}}
